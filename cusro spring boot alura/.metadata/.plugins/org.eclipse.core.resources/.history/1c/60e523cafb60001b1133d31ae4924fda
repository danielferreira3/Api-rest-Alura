#conectar com banco


spring.jpa.hibernate.ddl-auto=update
spring.datasource.url=jdbc:mysql://localhost/forum?useTimezone=true&serverTimezone=UTC
spring.datasource.username=root
spring.datasource.password=
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver

#application properties serve patra conectar com o servidor

spring.jpa.hibernate.ddl-auto=update
spring.datasource.url=jdbc:mysql://localhost/forum?createDatabaseIfNotExist=true&serverTimezone=UTC&useSSl=false
spring.datasource.username=root
spring.datasource.password=
spring.jpa.show-sql=true